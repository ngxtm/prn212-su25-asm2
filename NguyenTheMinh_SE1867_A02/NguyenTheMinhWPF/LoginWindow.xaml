<Window x:Class="NguyenTheMinhWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenTheMinhWPF"
        mc:Ignorable="d"
        Title="FUMiniHotelSystem - Login" Height="400" Width="700" FontFamily="Tahoma" FontSize="26" Background="#FFF5F5DC" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FF6B705C"/>
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFFFF8EB"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Background" Value="#FFB38B82"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Label Content="Email"/>
        <TextBox x:Name="txtEmail"/>
        <Label Content="Password"/>
        <PasswordBox x:Name="pbPassword"/>
        <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
