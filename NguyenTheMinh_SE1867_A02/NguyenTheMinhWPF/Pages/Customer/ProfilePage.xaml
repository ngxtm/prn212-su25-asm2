<Page x:Class="NguyenTheMinhWPF.Pages.Customer.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProfilePage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Quản lý hồ sơ cá nhân" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Họ tên:" Width="120"/>
                <TextBox x:Name="txtFullName" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Số điện thoại:" Width="120"/>
                <TextBox x:Name="txtTelephone" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Email:" Width="120"/>
                <TextBox x:Name="txtEmail" Width="250" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Ngày sinh:" Width="120"/>
                <DatePicker x:Name="dpBirthday" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Mật khẩu mới:" Width="120"/>
                <PasswordBox x:Name="pbPassword" Width="250"/>
            </StackPanel>
            <Button Content="Cập nhật hồ sơ" Width="150" Margin="0,20,0,0" Click="btnUpdateProfile_Click"/>
        </StackPanel>
    </Grid>
</Page> 